<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txv_hour_item_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16:00 - 17:00"
        android:textColor="@color/colorBlue"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txv_class_name_item_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Nombre materia"
        android:textColor="@color/colorDarkGray"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_apple_black" />
            <TextView
                android:id="@+id/txv_teacher_name_item_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="Nombre profesor"
                android:textColor="@color/colorDarkGray"
                android:textSize="12dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>